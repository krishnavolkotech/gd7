{
    "name": "drupal/drupal",
    "description": "Drupal is an open source content management platform powering millions of websites and applications.",
    "type": "project",
    "license": "GPL-2.0+",
    "require": {
        "composer/installers": "^1.0.21",
        "wikimedia/composer-merge-plugin": "~1.3",
        "drupal/core": "8.2.4",
        "drupal/config_direct_save": "* 1.0.0",
        "drupal/search_api_solr": "1.0.0-beta1",
        "drupal/search_api": "1.0-beta3",
        "drupal/view_unpublished": "1.0-alpha1",
        "drupal/group": "1.0.0-beta5",
        "zendframework/zend-stdlib": "3.0.1",
        "drupal/migrate_manifest": "^1.4",
        "drupal/entity_print": "2.0.0-beta2",
        "dompdf/dompdf": "^0.8.0",
        "drupal/swiftmailer": "^1.0@beta",
        "drush/drush": "^8.1",
        "symfony/dom-crawler": "2.8",
        "drupal/console": "^0.11.3",
        "drupal/gforum": "^1.0@beta",
        "drupal/subpathauto": "^1.0@beta",
        "drupal/login_emailusername": "^1.1",
        "drupal/flood_unblock": "^1.3",
        "drupal/simple_block": "^1.0@beta",
        "drupal/better_exposed_filters": "^3.0@alpha",
        "drupal/queue_mail": "^1.0@alpha",
        "drupal/block_visibility_groups": "1.1.0",
        "drupal/menu_export": "1.0.0",
        "drupal/views_merge_rows": "^2.1",
        "drupal/back_to_top": "^1.0@beta",
        "drupal/anchor_link": "^1.5"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "preferred-install": "dist",
        "autoloader-suffix": "Drupal8"
    },
    "extra": {
        "_readme": [
            "By default Drupal loads the autoloader from ./vendor/autoload.php.",
            "To change the autoloader you can edit ./autoload.php."
        ],
        "merge-plugin": {
            "include": [
                "core/composer.json"
            ],
            "recurse": false,
            "replace": false,
            "merge-extra": false
        },
        "installer-paths": {
            "modules/contrib/{$name}": ["type:drupal-module"],
            "profiles/contrib/{$name}": ["type:drupal-profile"],
            "themes/contrib/{$name}": ["type:drupal-theme"]
        }
    },
    "autoload": {
        "psr-4": {
            "Drupal\\Core\\Composer\\": "core/lib/Drupal/Core/Composer"
        }
    },
    "scripts": {
        "pre-autoload-dump": "Drupal\\Core\\Composer\\Composer::preAutoloadDump",
        "post-autoload-dump": "Drupal\\Core\\Composer\\Composer::ensureHtaccess",
        "post-package-install": "Drupal\\Core\\Composer\\Composer::vendorTestCodeCleanup",
        "post-package-update": "Drupal\\Core\\Composer\\Composer::vendorTestCodeCleanup"
    },
    "repositories": {
        "drupal": {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    }
}
