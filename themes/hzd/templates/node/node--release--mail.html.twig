<div class="release-info">
    <table>
        {% if content.field_relese_services %}
            <tr>
                <td style="font-weight: 700;line-height: 22px;width: 10%;">{{ node.field_relese_services.fieldDefinition.label }}</td>
                <td>{{ content.field_relese_services }}</td>
            </tr>
        {% endif %}
        {% if content.field_calculated_title %}
            <tr>
                <td style="font-weight: 700;line-height: 22px;width: 10%;">{{ node.field_calculated_title.fieldDefinition.label }}</td>
                <td>{{ content.field_calculated_title }}</td>
            </tr>
        {% endif %}
        {% if content.field_release_type %}
            <tr>
                <td style="font-weight: 700;line-height: 22px;width: 10%;">{{ node.field_release_type.fieldDefinition.label }}</td>
                <td>{% if status == 0 %}
		  {{ content.field_release_type }}
		  {% else %}
		  <div class="field field--name-field-release-type field--type-list-string field--label-hidden field--item">{{ status }}</div>
		  {% endif %}
		</td>
            </tr>
        {% endif %}
        {% if content.field_date %}
            <tr>
                <td style="font-weight: 700;line-height: 22px;width: 10%;">{{ node.field_date.fieldDefinition.label }}</td>
                <td>{{ content.field_date }}</td>
            </tr>
        {% endif %}
        {% if node.field_release_comments.value %}
            <tr>
                <td style="font-weight: 700;line-height: 22px;width: 10%;">{{ node.field_release_comments.fieldDefinition.label }}</td>
                <td>{{ content.field_release_comments }}</td>
            </tr>
        {% endif %}
    </table>
</div>    
