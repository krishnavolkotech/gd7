                <td>{{ content.field_follow_up[0] }}</td>
              </tr>
              <tr>
                <th scope="row">Risiken: Statusverteilung</th>
                <td><canvas id="status-pie-chart" width="220" height="128"></canvas></td>
              </tr>
              {# <tr> #}
                {# <th scope="row">Status der Risiken</th> #}
                {# <td> #}
                  {# style="margin-top: -30px; margin-bottom: 10px;" #}
                  {# <canvas id="myChart" width="100" height="100"></canvas> #}
                {# </td> #}
              {# </tr> #}
           </tbody>
          </table>
        </div>
        {# Maßnahmendaten Gruppe 2 #}
        {# Zust. Land, Eigentümer, Startt., Zielt. #}
