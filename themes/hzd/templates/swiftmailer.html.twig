}
.downtimes-email-wrapper h3 {
    width: 100%;
    float: left;
    margin: 10px 0 !important;
}
.downtimes-email-wrapper ul {
    width: 100%;
    margin: 0 0 0 17px !important;
    padding: 0 !important;
}
.downtimes-email-wrapper ol li, .downtimes-email-wrapper ul li {
    width: 100%;
    float: left;
