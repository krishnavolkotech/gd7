.downtimes-email-wrapper tr td {
  padding: 0 2% 3px 0 !important;
}
.downtimes-email-wrapper tr {
  padding-bottom: 10px !important; 
}
.downtimes-email-wrapper .downtime-view-history {
    width: 100%;
    float: left;
    font-size: 20px;
    margin-bottom: 10px;
