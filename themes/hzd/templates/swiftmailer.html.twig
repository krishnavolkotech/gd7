    border: 1px solid rgba(0,0,0,.2);
    border-radius: 5px !important;
    border-collapse: inherit !important;
}
article.page .content table {
    width: 100% !important;
}
</style>

</head>
<body>
<div>
  <table width="800px" border="0" cellpadding="0" cellspacing="0" class="header-table" style="margin-bottom:35px;">
