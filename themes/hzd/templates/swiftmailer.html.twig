}
.quickinfo-mail-wrapper .field .field--item,
.quickinfo-mail-wrapper .field .field--item P, 
.quickinfo-mail-wrapper .field .field--items {
  width: 98%;
  display:block;
  margin: 0 0 3px 0%;
  padding: 0;
}
.field--type-file table thead tr th {
  border-left: 1px solid rgb(212,231,245);
  background: #d4eaf5;
  text-align: left;
  padding-right: 1em;
  height: 45px;
  font-family: arial,sans-serif;
  text-indent: 7px;
  border-radius: 0 !important;
}
.field--type-file table tbody tr.odd td {
  background-color: #e9f3fb;
}
.field--type-file table tbody tr.even td {
  background-color: #fff;
}
.field--type-file table,
.field--type-file table tbody tr{
  border:0;
}
table.header-table tr td{
  padding:10px;
}
h3 {
    font-size: 16px !important;
}
h1, h2, h3, h4, h5, h6 {
    color: #004070 !important;
    font-weight: 500 !important;
}
h1 {
    font-size: 20px !important;
}
h2 {
    font-size: 18px !important;
}
h3 {
    font-size: 16px !important;
}
h4, h5, h6 {
    font-size: 14px !important;
}
strong {
    font-weight: 700;
}
a {
    color: #0084bf;
}
p {
    margin: 0 0 10px;
}
p:last-child {
    margin-bottom: 0 !important;
    box-shadow: none;
}
.downtimes-email-wrapper .downtime-view-wrapper {
    background: #f5f7fa;
    padding: 20px;
    width: 100%;
    float: left;
    margin: 0px;
    text-align: left;
}
